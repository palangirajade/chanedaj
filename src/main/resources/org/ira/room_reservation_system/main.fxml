<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- Professional, clean main screen -->
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.ira.room_reservation_system.MainController"
           style="-fx-background-color: linear-gradient(to bottom, #f4f6fb, #e9ecf3);">
    <VBox alignment="TOP_CENTER" spacing="18" maxWidth="1000">
        <Region minHeight="30" />
        <HBox spacing="12" alignment="CENTER"
              style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, #b0b4c1, 8, 0.12, 0, 2); -fx-padding: 18 24;">
            <Button text="Add" onAction="#onAddRoom"
                    style="-fx-background-color: linear-gradient(to right, #4e54c8, #8f94fb); -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 7; -fx-font-size: 14px; -fx-cursor: hand;" />
            <Button text="Update" onAction="#onUpdateRoom"
                    style="-fx-background-color: #f4f6fb; -fx-text-fill: #4e54c8; -fx-font-weight: bold; -fx-background-radius: 7; -fx-font-size: 14px; -fx-cursor: hand;" />
            <Button text="Delete" onAction="#onDeleteRoom"
                    style="-fx-background-color: #f4f6fb; -fx-text-fill: #e74c3c; -fx-font-weight: bold; -fx-background-radius: 7; -fx-font-size: 14px; -fx-cursor: hand;" />
            <Button text="Load Test Data" onAction="#onLoadTestData"
                    style="-fx-background-color: #f4f6fb; -fx-text-fill: #2d3559; -fx-font-weight: bold; -fx-background-radius: 7; -fx-font-size: 14px; -fx-cursor: hand;" />
            <Button text="Sign Out" onAction="#onSignOut"
                    style="-fx-background-color: transparent; -fx-text-fill: #4e54c8; -fx-font-weight: bold; -fx-background-radius: 7; -fx-font-size: 14px; -fx-cursor: hand;" />
        </HBox>
        <Label text="Rooms:"
               style="-fx-font-size: 18px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-font-weight: bold; -fx-text-fill: #2d3559; -fx-padding: 18 0 0 0;" />
        <ScrollPane fitToWidth="true" prefHeight="400" maxWidth="1000"
                    style="-fx-background-color: transparent; -fx-background-insets: 0;">
            <FlowPane fx:id="roomListPane" hgap="16" vgap="16" prefWidth="900" alignment="CENTER"
                      style="-fx-padding: 18;">
                <!-- Room cards will be added here dynamically -->
            </FlowPane>
        </ScrollPane>
        <Region minHeight="30" />
    </VBox>
</StackPane>
