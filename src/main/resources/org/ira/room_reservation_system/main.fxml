<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!-- Navy blue themed main screen -->
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.ira.room_reservation_system.MainController"
           style="-fx-background-color: linear-gradient(to bottom, #0a192f, #172a45);">
    <VBox alignment="TOP_CENTER" spacing="20" maxWidth="1200">
        <Region minHeight="25" />
        <Label text="UNIVERSITY OF CEBU" 
              style="-fx-font-size: 20px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 0 0 8 0;" />
        <HBox fx:id="buttonBar" spacing="15" alignment="CENTER"
              style="-fx-background-color: white; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 12, 0.15, 0, 3); -fx-padding: 18 24;">
            <Button text="Add" onAction="#onAddRoom"
                    style="-fx-background-color: #1a365d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 8 18;" />
            <Button text="Update" onAction="#onUpdateRoom"
                    style="-fx-background-color: #f8f9fa; -fx-text-fill: #1a365d; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 8 18; -fx-border-color: #cbd5e0; -fx-border-radius: 5;" />
            <Button text="Delete" onAction="#onDeleteRoom"
                    style="-fx-background-color: #f8f9fa; -fx-text-fill: #dc3545; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 8 18; -fx-border-color: #cbd5e0; -fx-border-radius: 5;" />
            <Button text="Load Test Data" onAction="#onLoadTestData"
                    style="-fx-background-color: #f8f9fa; -fx-text-fill: #1a365d; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 8 18; -fx-border-color: #cbd5e0; -fx-border-radius: 5;" />
            <Button text="Sign Out" onAction="#onSignOut"
                    style="-fx-background-color: transparent; -fx-text-fill: #4a5568; -fx-font-weight: bold; -fx-background-radius: 5; -fx-font-size: 14px; -fx-cursor: hand; -fx-padding: 8 18;" />
        </HBox>
        <HBox alignment="CENTER" spacing="10">
            <VBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" maxWidth="1100">
                <Label text="Available Rooms"
                       style="-fx-font-size: 18px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-font-weight: bold; -fx-text-fill: white; -fx-padding: 20 0 5 10;" />
            </VBox>
        </HBox>
        
        <ScrollPane fitToWidth="true" prefHeight="400" maxWidth="1150"
                    style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 0 10 0 10;">
            <FlowPane fx:id="roomListPane" hgap="20" vgap="20" prefWidth="1100" alignment="CENTER"
                      style="-fx-padding: 20 15; -fx-background-color: rgba(255, 255, 255, 0.08); -fx-background-radius: 8;">
                <!-- Room cards will be added here dynamically -->
            </FlowPane>
        </ScrollPane>
        <HBox alignment="CENTER" spacing="5" style="-fx-padding: 15 0 10 0;">
            <Label text="© 2025 University of Cebu • Room Reservation System" 
                  style="-fx-font-size: 12px; -fx-font-family: 'Segoe UI', 'Arial', sans-serif; -fx-text-fill: rgba(255,255,255,0.7); -fx-font-weight: 400;" />
        </HBox>
        <Region minHeight="20" />
    </VBox>
</StackPane>
